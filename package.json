{
  "name": "LXHistory_Sync",
  "displayName": "LXHistory_Sync",
  "version": "1.0.0",
  "description": "LXHistory_Sync - WebDAV 历史记录同步扩展",
  "packageManager": "npm@10.0.0",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:ci": "plasmo build --no-source-maps",
    "package": "plasmo package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.10.0",
    "plasmo": "^0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-virtuoso": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.6.0",
    "prettier": "^3.8.1",
    "typescript": "5.3.3",
    "typescript-eslint": "^7.18.0",
    "vitest": "^4.0.18"
  },
  "manifest": {
    "permissions": [
      "history",
      "storage"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https:; img-src 'self' data: https:"
    },
    "action": {
      "default_title": "LXHistory_Sync",
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "background.ts"
    }
  },
  "plasmo": {
    "assets": [
      "assets/icon.png"
    ],
    "manifest": {
      "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
      },
      "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
}
