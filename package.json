{
  "name": "LXHistory_Sync",
  "displayName": "LXHistory_Sync",
  "version": "1.1.2",
  "description": "LXHistory_Sync - WebDAV 历史记录同步扩展",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:ci": "plasmo build --no-source-maps",
    "package": "plasmo package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "1.10.0",
    "plasmo": "^0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-virtuoso": "^4.18.1",
    "use-debounce": "^10.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "5.3.3",
    "typescript-eslint": "^7.18.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "msgpackr": ">=1.10.1",
    "esbuild": "0.25.0",
    "content-security-policy-parser": ">=0.6.0"
  },
  "targets": {
    "default": {
      "includeNodeModules": true
    }
  },
  "manifest": {
    "permissions": [
      "history",
      "storage",
      "alarms"
    ],
    "optional_host_permissions": [
      "https://*/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https:; img-src 'self' data: https:"
    },
    "action": {
      "default_title": "LXHistory_Sync",
      "default_popup": "popup.html"
    }
  },
  "plasmo": {
    "assets": [
      "url:assets/icon.png"
    ],
    "manifest": {
      "action": {
        "default_icon": "url:assets/icon.png",
        "default_popup": "popup.html"
      },
      "icons": {
        "16": "url:assets/icon.png",
        "32": "url:assets/icon.png",
        "48": "url:assets/icon.png",
        "128": "url:assets/icon.png"
      }
    }
  }
}
